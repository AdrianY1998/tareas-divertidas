<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miembros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/posicionLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/botonHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/boton_inicio"
            android:src="@drawable/boton_inicio"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boton_miembros"
            app:srcCompat="@drawable/boton_miembros" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nuevoMiembro"
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/boton_nuevo_miembro"
            android:src="@drawable/boton_nuevo_miembro"/>

        <ImageView
            android:id="@+id/eliminar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/boton_eliminar"
            android:src="@drawable/boton_eliminar"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botones"
        android:layout_below="@+id/posicionLogo" />


</RelativeLayout>