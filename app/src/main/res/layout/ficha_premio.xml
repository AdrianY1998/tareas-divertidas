<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:backgroundTint="@color/colorPrimaryDark">


    <RelativeLayout
        android:id="@+id/botonatrasYTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/botonAtras"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            app:srcCompat="@drawable/boton_atras" />

        <TextView
            android:id="@+id/preiosTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Premios"
            android:textColor="@color/design_default_color_primary"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/imagenPremio"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/premio_predeterminado" />

        <TextView
            android:id="@+id/nombrePremio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagenPremio"
            android:layout_centerHorizontal="true"
            android:text="Nombre"
            android:textColor="@color/design_default_color_primary"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="195dp"
            android:text="Para Ganarlo se requiere:"
            android:textColor="@color/design_default_color_primary"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/puntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Puntos"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30sp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/editar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/boton_editar" />

        <ImageView
            android:id="@+id/eliminar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/boton_eliminar" />
    </LinearLayout>
</RelativeLayout>