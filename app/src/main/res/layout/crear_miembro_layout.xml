<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/volverAtras"
        android:padding="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/boton_atras" />

    <ImageView
        android:id="@+id/user"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        >
    </ImageView>
    <EditText
        android:id="@+id/ingresarNombre"
        android:paddingTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="Ingrese su nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingresarNombre"
        android:id="@+id/Edad"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Ingrese su edad"
        android:inputType="number"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/correoElectronico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textEmailAddress"
        android:layout_below="@id/Edad"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:hint="Ingrese su correo electrÃ³nico"/>

    <ImageView
        android:id="@+id/crearMiembro"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correoElectronico"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/boton_nuevo_miembro" />

</RelativeLayout>