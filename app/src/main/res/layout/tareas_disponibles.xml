<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/crear"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/boton_crear" />

    <LinearLayout
        android:id="@+id/layoutBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/botonAtras"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/boton_atras" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nueva Tarea"
            android:textColor="@color/design_default_color_primary"
            android:textColorHighlight="@color/design_default_color_primary"
            android:textSize="40dp" />

        //d
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tareaDisponibleInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutBack"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/Prefil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/tarea_predeterminada" />
        </RelativeLayout>

        <EditText
            android:id="@+id/nombreTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nombre Tarea"
            android:textColor="@color/design_default_color_primary" />

        <EditText
            android:id="@+id/Puntaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="Puntaje"
            android:textColor="@color/design_default_color_primary" />

    </LinearLayout>

</RelativeLayout>