<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Activities.MenuActivity">

    <ImageView
        android:id="@+id/tareasDivertidas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <ImageView
        android:id="@+id/botonMiembros"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/tareasDivertidas"
        android:layout_alignStart="@+id/tareasDivertidas"
        android:layout_alignTop="@+id/botonPremios"
        app:srcCompat="@drawable/boton_miembros" />

    <ImageView
        android:id="@+id/botonPremios"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignEnd="@+id/tareasDivertidas"
        android:layout_alignRight="@+id/tareasDivertidas"
        android:layout_below="@+id/tareasDivertidas"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/boton_premios" />

    <ImageView
        android:id="@+id/botonAsignacionTareas"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/botonMiembros"
        android:layout_alignStart="@+id/botonMiembros"
        android:layout_below="@+id/botonMiembros"
        app:srcCompat="@drawable/boton_tareas" />

    <ImageView
        android:id="@+id/evaluacion"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/botonPremios"
        android:layout_alignStart="@+id/botonPremios"
        android:layout_below="@+id/botonPremios"
        app:srcCompat="@drawable/boton_evaluacion" />


</RelativeLayout>